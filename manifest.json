{
  "name": "Brain Cache",
  "version": "1.0.0",
  "description": "Search for your browser history by any keywords in articles, not limited to article title.",
  "permissions": [
    "cookies",
    "declarativeContent",
    "storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "javascripts/brain-cache-storage.js",
        "javascripts/highlight.js",
        "javascripts/page.js"
      ],
      "css": [
        "stylesheets/highlight.css",
        "stylesheets/page.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/search*"
      ],
      "js": ["javascripts/search.js"],
      "css": ["stylesheets/search.css"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/brain_cache16.png",
      "32": "images/brain_cache32.png",
      "48": "images/brain_cache48.png",
      "128": "images/brain_cache128.png"
    }
  },
  "icons": {
    "16": "images/brain_cache16.png",
    "32": "images/brain_cache32.png",
    "48": "images/brain_cache48.png",
    "128": "images/brain_cache128.png"
  },
  "manifest_version": 2
}
